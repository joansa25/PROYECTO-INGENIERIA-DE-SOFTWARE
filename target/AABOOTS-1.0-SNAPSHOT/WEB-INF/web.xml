<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>A1</servlet-name>
        <servlet-class>A1</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Validar</servlet-name>
        <servlet-class>Controlador.Validar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>Controlador.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Acciones</servlet-name>
        <servlet-class>Controlador.Acciones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Marca</servlet-name>
        <servlet-class>Modelo.Marca</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MarcaDao</servlet-name>
        <servlet-class>Modelo.MarcaDao</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>A1</servlet-name>
        <url-pattern>/A1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Validar</servlet-name>
        <url-pattern>/Validar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Acciones</servlet-name>
        <url-pattern>/Acciones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Marca</servlet-name>
        <url-pattern>/Marca</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MarcaDao</servlet-name>
        <url-pattern>/MarcaDao</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
